{
  "expo": {
    "name": "Friendship App",
    "slug": "friendship-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.friendshipapp.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#667eea"
      },
      "package": "com.friendshipapp.mobile"
    },
    "web": {
    },
    "plugins": [
      "expo-image-picker",
      "expo-av",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select a profile picture."
        }
      ]
    ]
  }
}